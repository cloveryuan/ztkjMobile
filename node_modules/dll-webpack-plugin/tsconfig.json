{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
	    "strictNullChecks": true,
		"experimentalDecorators": true,
		"outDir": "./lib",
		"noUnusedLocals": true,
        "checkJs": true,
        "lib":[
            "es5",
            "es6",
            "es7"
        ]
    },
    "include": [
        "./src/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}
